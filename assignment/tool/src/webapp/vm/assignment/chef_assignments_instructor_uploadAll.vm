<!-- start: chef_assignments_instructor_uploadALL.vm  -->
<div class="portletBody">
	<h3>
	#if ($!download)
		$tlang.getString('downall')
	#else
		$tlang.getString('uploadall.title')
	#end
	</h3>
	#if ($alertMessage)<div class="sak-banner-error"><strong>$tlang.getString("gen.alert")</strong> $alertMessage</div>#end
	#if ($!download)
		<p class="instruction">
		$tlang.getString('downloadall.instruction')
		<br />
		<div class="highlight">
			$tlang.getString('downloadall.note')
		</div>
		</p>
	#else
		<p class="instruction">
		$tlang.getString('uploadall.instruction')<span class="reqStarInline">*</span>
		</p>
		#set($downloadTemplateUrl="$accessPointUrl?contextString=" + $contextString + "&studentSubmissionText=true&studentSubmissionAttachment=true&gradeFile=true&feedbackTexts=true&feedbackComments=true&feedbackAttachments=true")
		<div class="sak-banner-info"><ul>
			<li>$tlang.getString('uploadall.instruction2')(<a href="$downloadTemplateUrl" title="$!tlang.getString('downall')">$tlang.getString('uploadall.instruction3')</a>)</li>
			<li>$tlang.getString('uploadall.instruction4')</li>
			<li>$uploadallInstruction5</li>
		</ul></div>
		<p class="sak-banner-warn">
			$tlang.getString('uploadall.note')
		</p>
		#if ($plagiarismNote)
			<p>
				<span class="bi bi-award assignmentRosette" aria-hidden="true" aria-label="$reviewIndicator"></span>
				<em>
					$plagiarismNote
				</em>
			</p>
		#end
	#end
	<form id="uploadAllForm" name="uploadAllForm" action="#toolForm('AssignmentAction')" method="post" onsubmit="return true;" enctype="multipart/form-data">
			<input type="hidden" name="sakai_action" id="sakai_action" value="doUpload_all" />
			<input type="hidden" name="flow" id="flow" value="upload" />
			<input type="hidden" name="assignmentReference" id="assignmentReference" value="$aRef" />
			<input type="hidden" name="view" id="view" value="$view" />
			<input type="hidden" name="downloadUrl" id="downloadUrl" value="" />
			<div class="highlightPanel">
				#if (!$!download)
					<div class="shorttext">
						<h4><span class="reqStar">*</span><label for="file">$tlang.getString("uploadall.choose.file")</label></h4>
						<input type="file" name="file" id="file" class="upload" onchange="document.getElementById('filechosenconfirm').style.display='block';" />
						<p id="filechosenconfirm" class="sak-banner-info" style="display:none">$tlang.getString("uploadall.choose.file.confirm")</p>
						<h4><span class="reqStar">*</span>$tlang.getString("uploadall.choose.file2")</h4>
					</div>
			#end
			#if ($download)
				<h4>$tlang.getString("downloadall.options.data")</h4>
			#end
			<p class="checkbox">
			 ## select-all box
			 <label for="selectall"><input type="checkbox" name="selectall" id="selectall" title="$tlang.getString('gen.toggle')" #if($download && $allDataSelected)checked="checked"#end onclick="ASN.toggleSelectAll(this, 'choices')" /> $tlang.getString("all")</label><br/>
			 #if ($!includeSubmissionText)
					## student submission text
					<label for="studentSubmissionText" class="indnt1"><input id="studentSubmissionText" type="checkbox" value="studentSubmissionText" name="choices" class="toggleSelectedAll" #if($!hasSubmissionText)checked="checked"#end onclick="ASN.deselectSelectAll( this );" /> $tlang.getString("uploadall.choose.file.studentSubmissionText")</label><br/>
				#end
				#if ($!includeSubmissionAttachment)
					## student submission attachment
					<label for="studentSubmissionAttachment" class="indnt1"><input id="studentSubmissionAttachment" type="checkbox" value="studentSubmissionAttachment" name="choices" class="toggleSelectedAll" #if($!hasSubmissionAttachment)checked="checked"#end onclick="ASN.deselectSelectAll( this );" /> $tlang.getString("uploadall.choose.file.studentSubmissionAttachment")</label><br/>
				#end
				## grade files
				<label for="gradeFile" class="indnt1"><input id="gradeFile" type="checkbox" value="gradeFile" name="choices" class="toggleSelectedAll" #if($!hasGradeFile)checked="checked"#end onclick="ASN.deselectSelectAll( this );" /> $tlang.getString("uploadall.choose.file.gradeFile")</label><br/>
			</p>
			<p class="radio">
				<label for="gradeFileFormat_csv" class="innerRadio"><input id="gradeFileFormat_csv" type="radio" value="csv" name="gradeFileFormat" #if($gradeFileFormat=="csv")checked="checked"#end /> $tlang.getString("uploadall.choose.file.gradeFile.csv")</label><br/>
				<label for="gradeFileFormat_excel" class="innerRadio"><input id="gradeFileFormat_excel" type="radio" value="excel" name="gradeFileFormat" #if($gradeFileFormat=="excel")checked="checked"#end /> $tlang.getString("uploadall.choose.file.gradeFile.excel")</label><br/>
			</p>
			<p class="checkbox">
				#if ($!includeSubmissionText)
					## feedback text
					<label for="feedbackTexts" class="indnt1"><input id="feedbackTexts" type="checkbox" value="feedbackTexts" name="choices" class="toggleSelectedAll" #if($!hasFeedbackText)checked="checked"#end onclick="ASN.deselectSelectAll( this );" /> $tlang.getString("uploadall.choose.file.feedbackTexts")</label><br/>	
				#end
			 ## feedback comments
				<label for="feedbackComments" class="indnt1"><input id="feedbackComments" type="checkbox" value="feedbackComments" name="choices" class="toggleSelectedAll" #if($!hasComments)checked="checked"#end onclick="ASN.deselectSelectAll( this );" /> $tlang.getString("uploadall.choose.file.feedbackComments")</label><br/>	
			 ## feedback attachments
				<label for="feedbackAttachments" class="indnt1"><input id="feedbackAttachments" type="checkbox" value="feedbackAttachments" name="choices" class="toggleSelectedAll" #if($!hasFeedbackAttachment)checked="checked"#end onclick="ASN.deselectSelectAll( this );" /> $tlang.getString("download.feedback.attachment")</label><br/>
			 ## rubrics
			 #if ($hasRubric)
				<label for="rubrics" class="indnt1"><input id="rubrics" type="checkbox" value="rubrics" name="choices" class="toggleSelectedAll" #if($!hasRubrics)checked="checked"#end onclick="ASN.deselectSelectAll( this );" /> $tlang.getString("uploadall.choose.file.rubrics")</label><br/>
			 #end
			<br/>
			## SAK-19147 output without folders
			#if ($!download && $enableFlatDownload)
				<label for="withoutFolders"><input id="withoutFolders" type="checkbox" value="withoutFolders" name="choices" class="toggleNotSelectedAll" #if($!withoutFolders)checked="checked"#end onclick="ASN.deselectSelectAll( this );" /> $tlang.getString("uploadall.folders.no")</label><br/>
			#end
			</p>
			#if ($download)
			<hr/>
			<h4>$tlang.getString("downloadall.options.students")</h4>
			<p class="shorttext">
				<label for="downloadSubmissionStatus">$tlang.getString("downloadall.options.students.status")</label><br/>
				<select id="downloadSubmissionStatus" name="downloadSubmissionStatus">
					<option value="all" selected="selected">$tlang.getString("downloadall.options.students.status.all")</option>
					<option value="submitted">$tlang.getString("downloadall.options.students.status.submitted")</option>
				</select>
			</p>
			<p class="shorttext">
				<label for="downloadViewString">$tlang.getString("downloadall.options.students.group")</label><br/>
					<select id="downloadViewString" name="downloadViewString">
						<option value="all" #if(!$viewString || $viewString == "all")selected="selected"#end>$tlang.getString("range.allgroups")</option>
						#foreach ($group in $groups)
							<option value="$group.Id" #if($viewString == $group.Id)selected="selected"#end>$formattedText.escapeHtml($group.Title)</option>
						#end
					</select>
			</p>
			#end
				
			#if (!$download)
				<h4>$tlang.getString("uploadall.releaseOption")</h4>
				<p class="radio">
					## release uploaded info
					<label for="release_true"><input type="radio" name="release" id="release_true" value="true" #if($!releaseGrades)checked="checked"#end /> $tlang.getString("uploadall.releaseOption.yes")</label>
					<br/>
					## NOT release uploaded info
					<label for="release_false"><input type="radio" name="release" id="release_false" value="false" #if(!$!releaseGrades)checked="checked"#end /> $tlang.getString("uploadall.releaseOption.no")</label>
				</p>
			#end
			<p class="act">
			#if ($download)
				#set($alertMessage = $tlang.getString('downloadall.alert.choose.element'))
				#set($actionString="#toolLinkParam($action 'doDownload_all')")
				<input type="button" name="downloadButton" id="downloadButton"  accesskey="d" class="active"
						onclick="ASN.invokeDownloadUrl('$accessPointUrl', '$actionString', '$alertMessage', '$contextString', '$viewString', '$searchString', '$showSubmissionByFilterSearchOnly', this);" value="$tlang.getString('downloadall.button.download')" />
			#else
				<input type="button" name="uploadButton" id="uploadButton"  accesskey="s" class="active"
						onclick="SPNR.disableControlsAndSpin( this, null ); document.getElementById('uploadAllForm').action='#toolLinkParam($action "doUpload_all" "sakai_csrf_token=$formattedText.escapeUrl($sakai_csrf_token)")'; ASN.submitForm( 'uploadAllForm', null, null, null );" value="$tlang.getString('uploadall.button.upload')" />
			#end	
					<input type="button" name="cancelButton" id="cancelButton"  accesskey="x"
						onclick="SPNR.disableControlsAndSpin( this, null ); document.getElementById('uploadAllForm').action='#toolLinkParam($action 'doCancel_download_upload_all')'; ASN.submitForm( 'uploadAllForm', null, null, null );" value="$tlang.getString('gen.can')" />
		</p>
		</div>
		<input type="hidden" name="sakai_csrf_token" value="$sakai_csrf_token" />
	</form>
</div>
<!-- end: chef_assignments_instructor_uploadALL.vm  -->
