					<th  id="action">
						$tlang.getString("att.rmv")
					</th>
				</tr>	
				#foreach($att_item in $attached)
					<tr>
						<td headers="item">
							<h4>
								<img src="#imageLink($att_item.iconLocation)" border= "0" alt="$att_item.hoverText" hspace="0" />
