</script>
<div class="portletBody specialLink">
	<form name="optionsForm" id="optionsForm" action="#toolForm("ResourcesAction")" method="post" >
		<input type="hidden" name="sakai_action" id="sakai_action" value="doUpdateDropboxOptions" />
		<input type="hidden" name="siteId" id="siteId" value="$siteId" />
		######################## ================ Title Bar for Item ================ ########################
		<h4>
			$title
		</h4>
		#if ($itemAlertMessage)
			<div class="alertMessage">$tlang.getString("label.alert") $validator.escapeHtml($itemAlertMessage)</div>
			<div style="display:block;clear:both" ></div>
		#end
		<p class="instruction">
			$tlang.getString("instr.dropbox.options") 
		</p>
		
		<h4>
			$tlang.getString("receive.confirm.dropbox.email.options")
		</h4>
		
		<p class="checkbox  indnt2">
			<input type="radio" name="$!name_dropbox_instructor_notifications" id="alwaysnotify" value="$!value_dropbox_instructor_notifications_always" #if($!value_dropbox_instructor_notifications.equals($!value_dropbox_instructor_notifications_always))checked="checked" #end />
			<label for="alwaysnotify">$tlang.getString('receive.confirm.dropbox.email.always')</label>
			<br/>
			<input type="radio" name="$!name_dropbox_instructor_notifications" id="allownotify" value="$!value_dropbox_instructor_notifications_allow" #if($!value_dropbox_instructor_notifications.equals($!value_dropbox_instructor_notifications_allow))checked="checked" #end />
			<label for="allownotify">$tlang.getString('receive.confirm.dropbox.email.allow')</label>
			<br/>
			<input type="radio" name="$!name_dropbox_instructor_notifications" id="nonotify" value="$!value_dropbox_instructor_notifications_none" #if($!value_dropbox_instructor_notifications.equals($!value_dropbox_instructor_notifications_none))checked="checked" #end />
			<label for="nonotify">$tlang.getString('receive.confirm.dropbox.email.none')</label>
		</p>
		
		<p class="act">
				<input type="button" class="active" name="savechanges" onclick="submitform('optionsForm');"  value="$tlang.getString("label.update")" accesskey="s" />
				<input type="button" name="cancel" onclick="document.getElementById('sakai_action').value='doCancelOptions';submitform('optionsForm');"   value="$tlang.getString("label.cancel")" accesskey="x" />
		</p>
		<input type="hidden" name="sakai_csrf_token" value="$sakai_csrf_token" />
	</form>
</div>

