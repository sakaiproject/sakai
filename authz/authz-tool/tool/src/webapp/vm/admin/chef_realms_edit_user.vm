<script type="text/javascript" language="JavaScript">
  focus_path = ["id"];
</script>
<div class="portletBody">
#if($menu)
	#toolbar($menu)
#end
	
		#if ($alertMessage)<div class="alertMessage">$tlang.getString("realm.user.alert") $validator.escapeHtml($alertMessage)</div>#end
		<div class ="breadCrumb">
			$tlang.getString("realm.user.edit") $validator.escapeHtml($!realm.Id)<br/$tlang.getString("realm.user.used")> $validator.escapeHtml($!realm.Description)
		</div>
		<p class="instruction">
			$tlang.getString("realm.user.set")
		</div>
		<form name="$form-name" action="#toolForm("$action")" method="post">
			<h4>
				$tlang.getString("realm.user.user")
			</h4>	
			<p class="shorttext">
				#if(!$user)<span class="reqStar">*</span>#end
				<label #if(!$user) for="id" #end>
					 $tlang.getString("realm.user.id")
				</label>
					#if(!$user)<input type="text" name="id" id="id"/>#else$validator.escapeHtml($user.Id)#end
			</p>
			<h4>
				$tlang.getString("realm.user.role")
			</h4>	
					<table  summary="">
						<tr>
							<td>
								$tlang.getString("realm.user.role2")
							</td>
							<td>
								#foreach ($role in $allRoles)
									<input type="radio" name="roles" id="role$velocityCount" value="$role.Id" #if($roles.Id==$role.Id)checked="checked"#end />
									<label for="role$velocityCount">$role.Id</label> <br />
								#end
							</td>
						</tr>
					</table>
				<h4>	
					$tlang.getString("realm.user.continue")
				</h4>	

					<div class="act">
						<input type="submit" name="eventSubmit_doDone_user" value="$tlang.getString("realm.user.done")" />
					</div>
				<h4>	
					$tlang.getString("realm.user.complete")
				</h4>	

					<div class="act">
						<input type="submit" name="eventSubmit_doSave_user" value="$tlang.getString("realm.user.save")" />
						<input type="submit" name="eventSubmit_doCancel" value="$tlang.getString("realm.user.cancel")" />
					</div>
		</form>
	</div>

