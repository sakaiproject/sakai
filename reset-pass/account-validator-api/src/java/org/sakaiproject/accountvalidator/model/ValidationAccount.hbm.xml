<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.sakaiproject.accountvalidator.model">

    <class name="org.sakaiproject.accountvalidator.model.ValidationAccount" table="VALIDATIONACCOUNT_ITEM">
        <!-- create the primary key id, using native is typically the best way -->
        <id name="id" type="long">
            <generator class="native">
                <param name="sequence">VALIDATIONACCOUNT_ITEM_ID_SEQ</param>
            </generator>
        </id>
        <property name="userId" column="USER_ID" type="string" length="255" not-null="true"/>
        <property name="eid" column="EID" type="string" length="255"/>
        <property name="validationToken" column="VALIDATION_TOKEN" type="string" length="255" not-null="true"/>
        <property name="validationSent" column="VALIDATION_SENT" type="timestamp"/>
        <property name="validationReceived" column="VALIDATION_RECEIVED" type="timestamp"/>
        <property name="validationsSent" column="VALIDATIONS_SENT" type="integer"/>
        <property name="status" type="integer" column="STATUS"/>
        <property name="firstName" column="FIRST_NAME" type="string" length="255"/>
        <property name="surname" column="SURNAME" type="string" length="255"/>
        <property name="accountStatus" column="ACCOUNT_STATUS" type="integer"/>
    </class>
</hibernate-mapping>
