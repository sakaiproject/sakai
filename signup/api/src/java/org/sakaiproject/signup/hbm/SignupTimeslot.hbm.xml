<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping  package="org.sakaiproject.signup.model" default-lazy="false">
	<class name="org.sakaiproject.signup.model.SignupTimeslot"
			table="signup_ts" optimistic-lock="version">

		<id name="id" type="long">
	    	<generator class="native">
                <param name="sequence">signup_ts_ID_SEQ</param>
	    	</generator>
		</id>
		
		<version name="version" access="field" column="version"/>
		
		<property name="startTime" column="start_time" type="java.util.Date" not-null="true" />
		<property name="endTime" column="end_time" type="java.util.Date" not-null="true"/>
		<property name="maxNoOfAttendees" column="max_no_of_attendees" type="int" />
		<property name="displayAttendees" column="display_attendees" type="boolean" />
		<property name="canceled" column="canceled" type="boolean" />
		<property name="locked" column="locked" type="boolean" />
		<property name="groupId" column="group_id" type="string" not-null="false" />
		<property name="uuid" column="vevent_uuid" type="string" not-null="false" />
				
		<list name="attendees" cascade="save-update,delete" table="signup_ts_attendees" fetch="join">
			<key column="timeslot_id" not-null="true"/>
			<list-index column="list_index" />
			<composite-element class="org.sakaiproject.signup.model.SignupAttendee" >
				<property name="attendeeUserId" column="attendee_user_id" type="string" not-null="true" />
	   			<property name="comments" column="comments" type="text" not-null="false" />
				<property name="signupSiteId" column="signup_site_id" type="string" not-null="true" />
				<property name="calendarEventId" column="calendar_event_id" type="string" not-null="false" />
				<property name="calendarId" column="calendar_id" type="string" not-null="false" />
				<property name="attended"  type="boolean" >
					<column name="attended" default="0"/>
				</property>
				<!-- <property name="attended" column="attended" type="boolean" not-null="false" /> -->
			</composite-element>	
		</list>
		<list name="waitingList" cascade="save-update,delete" table="signup_ts_waitinglist" fetch="join">
			<key column="timeslot_id" not-null="true"/>
			<list-index column="list_index" />
			<composite-element class="org.sakaiproject.signup.model.SignupAttendee" >
				<property name="attendeeUserId" column="attendee_user_id" type="string" not-null="true" />
	   			<property name="comments" column="comments" type="text" not-null="false" />
				<property name="signupSiteId" column="signup_site_id" type="string" not-null="true" />
				<property name="calendarEventId" column="calendar_event_id" type="string" not-null="false" />
				<property name="calendarId" column="calendar_id" type="string" not-null="false" />
				<!-- <property name="attended" column="attended" type="boolean" not-null="false" /> -->
				<property name="attended"  type="boolean" >
					<column name="attended" default="0"/>
				</property>
			</composite-element>	
		</list>
	</class>
</hibernate-mapping>
