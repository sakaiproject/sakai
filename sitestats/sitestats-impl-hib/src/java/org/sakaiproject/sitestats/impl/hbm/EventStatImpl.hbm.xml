<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.sakaiproject.sitestats.impl.EventStatImpl"
		table="SST_EVENTS"
		lazy="true">
		<id name="id" type="long" column="ID" unsaved-value="0">
			<generator class="native">
				<param name="sequence">SST_EVENTS_ID</param>
			</generator>
		</id>		
		<property name="userId" column="USER_ID" type="string" length="99" not-null="true" index="SST_EVENTS_USER_ID_IX" />
		<property name="siteId" column="SITE_ID" type="string" length="99" not-null="true" index="SST_EVENTS_SITE_ID_IX" />
		<property name="eventId" column="EVENT_ID"  type="string" length="32" not-null="true" index="SST_EVENTS_EVENT_ID_IX"/>
		<property name="date" column="EVENT_DATE" type="date" not-null="true" index="SST_EVENTS_DATE_IX"/>
		<property name="count" column="EVENT_COUNT" type="long" not-null="true"/>
	</class>
</hibernate-mapping>
