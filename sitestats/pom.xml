    <!-- Profiles -->
    <profiles>
      <profile>
        <!-- Execute performance tests (instead) -->
        <id>perftests</id>
        <properties>
          <perftests.includes>**/*TestPerf.java</perftests.includes>
        </properties>
      </profile>
      <profile>
        <!-- Generate DB schema (DDL) -->
        <id>ddl</id>
        <modules>
          <module>sitestats-impl-hib/src/ddl</module>
        </modules>
      </profile>
    </profiles>

