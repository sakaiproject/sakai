<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Sakai SiteStats API</name>
  <groupId>org.sakaiproject.sitestats</groupId>
  <artifactId>sakai-sitestats-api</artifactId>
  <organization>
    <name>Universidade Fernando Pessoa</name>
    <url>http://www.ufp.pt</url>
  </organization>
  <inceptionYear>2006</inceptionYear>

  <!-- Parent: Sakai SiteStats base -->
  <parent>
    <groupId>org.sakaiproject</groupId>
    <artifactId>sitestats</artifactId>
    <version>2.1-SNAPSHOT</version><!-- sitestats.version --> 
  </parent>
  
  <!-- Packaging -->
  <packaging>jar</packaging>
  <properties>
    <deploy.target>shared</deploy.target>
  </properties>
  
  <!-- Profiles -->
  <profiles>
    <profile>
      <!-- Binds to Sakai Kernel K1 - for Sakai 2.6.0+ -->
      <id>K1</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.sakaiproject.kernel</groupId>
          <artifactId>sakai-kernel-api</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject.kernel</groupId>
          <artifactId>sakai-component-manager</artifactId>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <!-- Binds to Sakai pre Kernel K1 - for Sakai 2.4.x/2.5.x -->
      <id>pre-K1</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.sakaiproject</groupId>
          <artifactId>sakai-tool-api</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject</groupId>
          <artifactId>sakai-event-api</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject</groupId>
          <artifactId>sakai-site-api</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject</groupId>
          <artifactId>sakai-util-api</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject</groupId>
          <artifactId>sakai-component</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject</groupId>
          <artifactId>sakai-component-api</artifactId>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

