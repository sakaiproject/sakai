  "main": "js/sakai-element.js",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "lint": "eslint \"packages/**/src/*.js\" --max-warnings=0",
    "lintfix": "eslint \"packages/**/src/*.js\" --max-warnings=0 --fix",

    "bundle": "esbuild \"bundle-entry-points/*.js\" --sourcemap --preserve-symlinks --bundle --splitting --metafile=bundles/meta.json --format=esm --outdir=bundles --minify",

    "deps:report": "node deployed-deps.mjs",
    "deps:dismiss": "node dismiss-nondeployed-dependabot-alerts.mjs",

    "analyze": "lit-analyzer --strict --quiet --rules.no-complex-attribute-binding=warning --rules.no-incompatible-type-binding=off \"packages/**/src/*.js\"",
    "test": "playwright install chromium && wtr"
  },
