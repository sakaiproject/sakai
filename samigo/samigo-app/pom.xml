	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<!-- the resources order is important the first take precidence -->
					<webResources>
						<resource>
							<directory>${basedir}/sakai-samigo/webapp</directory>
							<includes>
								<include>**/*.*</include>
							</includes>
						</resource>
						<resource>
							<directory>${basedir}/src/webapp</directory>
							<includes>
								<include>**/*.*</include>
							</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<configuration>
							<tasks>
								<echo message="project.build.directory=${project.build.directory}" />
								<echo message="basedir=${basedir}" />
								<echo message="basedir=${project.version}" />
								<copy
									file="${basedir}/../samigo-audio/target/samigo-audio-${project.version}.jar"
									tofile="${project.build.directory}/samigo-app-${project.version}/applets/samigo-audio-dev.jar" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>${basedir}/src/java</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>${basedir}/src/sql</directory>
				<includes>
					<include>**/*.sql</include>
				</includes>
			</resource>
		</resources>
		<!--  <sourceDirectory>src</sourceDirectory> -->
	</build>
