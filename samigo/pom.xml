                <artifactId>sections-impl</artifactId>
                <version>${sakai.version}</version>
            </dependency>
            <dependency>
                <groupId>org.sakaiproject.jsf</groupId>
                <artifactId>jsf-spreadsheet</artifactId>
                <version>${sakai.version}</version>
            </dependency>
