<?xml version="1.0" encoding="UTF-8"?>
<project default="sakai:build"
	xmlns:j="jelly:core"
	xmlns:ant="jelly:ant"
	xmlns:maven="jelly:maven"
	xmlns:u="jelly:util">

	<postGoal name="war:webapp">
          <copy todir="target/sakai-samigo-pack/WEB-INF" includeemptydirs="false"
           verbose="false">
            <fileset dir="src/webapp/WEB-INF" >
              <include name="components.xml" />
            </fileset>
            <fileset dir="src/sql" >
              <include name="**/*.sql" />
            </fileset>
          </copy>
	</postGoal>

</project>
