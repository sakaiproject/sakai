<?xml version="1.0"?>
<web-app id="WebApp_9" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>IMS Services Servlet</display-name>

  <!-- This does not use the request filter because all its URLs are web service endpoints and
       never function in the context of a user's session (even return-url) so there is no need
       to read a cookie, create a session, or set a cookie - and in the case of return-url,
       making a session and setting a cookie logs the user out.
   -->

  <servlet>
    <servlet-name>ServiceServlet</servlet-name>
    <servlet-class>org.sakaiproject.blti.ServiceServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LTI13Service</servlet-name>
    <servlet-class>org.sakaiproject.lti13.LTI13Servlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ServiceServlet</servlet-name>
    <url-pattern>/service/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LTI13Service</servlet-name>
    <url-pattern>/lti13/*</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>org.sakaiproject.util.SakaiContextLoaderListener</listener-class>
  </listener>

</web-app>
