		<input type="hidden" name="eventSubmit_doFind_course" value="x" />
		<input type="hidden" name="option" value="find"/>
		<p class="act">
			<input id="continueButton" 
				#if (!$selectedCourse || ($!authGroupSet && !$!authGroupSet.isEmpty()))
