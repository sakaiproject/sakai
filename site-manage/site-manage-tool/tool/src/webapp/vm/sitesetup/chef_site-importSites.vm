<div class="portletBody">
	<h3>
		$tlang.getString("import.reuse")
	</h3>
	<p class="step">
		$tlang.getString("import.reuse2")
	</p>
	<p class="instruction">
	$tlang.getString("import.choose")
	</p>
	<form name="importSitesForm" action="#toolForm("$action")" method="post">
		<table class ="listHier" cellspacing="0" summary="import sites and their tools" border="0">
			<tr>
				<th>
					&nbsp;
				</th>
				#foreach($site in $importSites.keys())
					<th>
						$validator.escapeHtml($site.getTitle())
					</th>
				#end
			</tr>
			#set ($toolCount=0)
			#foreach($toolId in $selectedTools)
			#set($selectedSites = $!importSitesTools.get($toolId))
			#set ($toolCount=$toolCount + 1)
				#if ($toolId == "sakai.schedule" || $toolId == "sakai.announcements" || $toolId == "sakai.resources" || $toolId == "sakai.discussion" || $toolId == "sakai.assignment" || $toolId == "sakai.assignment.grades")
					<tr>
						<td>
							#set($toolTitle = "")
							#foreach($t in $toolRegistrationList)
								#if ($t.getId() == $toolId)
									#set($toolTitle = $t.getTitle())
								#end
							#end
							$toolTitle
						</td>
						#set ($siteCount=0)
						#foreach($site in $importSites.keys())
						#set ($siteCount=$siteCount + 1)
							<td>
								#set($toolFound = false)
								#set($allPages = $site.getPages())
								#foreach ($page in $allPages)
									#set($pageTools = $page.getTools())
									#foreach ($pageTool in $pageTools)
										#if ($pageTool.getTool().getId() == $toolId)
											#set($toolFound = true)
										#end
									#end
								#end
								#if ($toolFound)
									<input type="checkbox" id="toolSite$toolCount$siteCount" name="$toolId" value="$site.Id" #if($!selectedSites.contains($site.Id))checked="checked"#end />
									<label class="skip" for="toolSite$toolCount$siteCount">Select $toolTitle of $validator.escapeHtml($site.getTitle())</label>
								#else
									<input type="checkbox" id="toolSite$toolCount$siteCount"  name="$toolId" value="$site.Id" disabled="disabled" />
								#end
							</td>
						#end
					</tr>
				#end
			#end
		</table>
		<input type="hidden" name="back" value="$back" />
		<input type="hidden" name="template-index" value="27" />
		<input type="hidden" name="continue" value="$continue" />
		<p class="act">
			<input type="submit" class="active" name="eventSubmit_doContinue" value="$tlang.getString('gen.continue')" />
			<input type="submit" name="eventSubmit_doBack" value="$tlang.getString('gen.back')" />
			<input type="submit" name="eventSubmit_doCancel" value="$tlang.getString('gen.cancel')" />
		</p>
	</form>
</div>
