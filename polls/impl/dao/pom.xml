  <artifactId>sakai-poll-dao-impl</artifactId>
  <description>
    This project creates the dao impl used by the Sakai Poll Tool
  </description>
  <packaging>jar</packaging>
  <dependencies>
        <!-- Evaluation dependencies -->
        <dependency>
            <groupId>org.sakaiproject</groupId>
