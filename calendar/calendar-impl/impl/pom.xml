    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/sql</directory>
                <includes>
                    <include>**/*.sql</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}/src/config</directory>
                <includes>
                    <include>**/*.xsl</include>
                    <include>**/*.xml</include>
                    <include>**/*.ttf</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}/src/resources</directory>
                <includes>
                     <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
        
    </build>
