  function toggleSelectAll(caller, elementName) {
    var newValue = caller.checked;
    var elements = document.getElementsByName(elementName);

    if(elements) {
      for(var i = 0; i < elements.length; i++) {
        elements[i].checked = newValue;
      }
    }
  }

