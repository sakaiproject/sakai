  <name>sakai-portal-xsl tool</name>
  <groupId>org.sakaiproject.portal</groupId>
  <artifactId>xsl-portal</artifactId>
  <organization>
    <name>University of Michigan</name>
    <url>http://sakaiproject.org/</url>
  </organization>
  <inceptionYear>2003</inceptionYear>
  <packaging>war</packaging>

    <!-- profiles added for WAS support -->
    <profiles>
        <profile>
            <id>full</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
					<groupId>${project.groupId}</groupId>
                    <artifactId>sakai-portal-impl</artifactId>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <!-- exclude xerces xml parser apis for WAS -->
            <id>was</id>
            <dependencies>
                <dependency>
					<groupId>${project.groupId}</groupId>
                    <artifactId>sakai-portal-impl</artifactId>
                    <exclusions>
                        <exclusion>
                            <groupId>xerces</groupId>
                            <artifactId>xmlParserAPIs</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

  <dependencies>
    <dependency>
      <groupId>org.sakaiproject.kernel</groupId>
      <artifactId>sakai-kernel-util</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring</artifactId>
    </dependency>
    <dependency>
