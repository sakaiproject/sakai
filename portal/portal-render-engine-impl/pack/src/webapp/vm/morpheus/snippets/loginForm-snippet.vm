<form id="loginForm" method="post" action="${loginPortalPath}/xlogin" enctype="application/x-www-form-urlencoded" class="Mrphs-loginForm">
    <div>
	<label for="eid" class="Mrphs-loginForm__label">${loginEidWording}</label>
    	<input name="eid" id="eid" type="text" class="Mrphs-loginForm__input">
	<label for="pw" class="Mrphs-loginForm__label">${loginPwWording}</label>
	<input name="pw" id="pw" type="password" class="Mrphs-loginForm__input">
    </div>
    <input name="submit" id="submit" type="submit" value="${loginWording}" class="Mrphs-loginForm__button">
</form>
