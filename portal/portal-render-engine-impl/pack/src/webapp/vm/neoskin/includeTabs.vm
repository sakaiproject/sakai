						#if (${tabsSites.prefsToolUrl})
<li class="submenuitem"><span><a href="${tabsSites.prefsToolUrl}?sakai_nav_minimized=true"  class="submenuitem-prefs">${rloader.sit_preferences}</a></span></li>
						#end
			#if (${tabsSites.worksiteToolUrl})
<li class="submenuitem "><span><a id="addNewSiteLink" href="${tabsSites.worksiteToolUrl}?sakai_nav_minimized=true&panel=Shortcut&sakai_action=doNew_site&sakai.state.reset=true" class="submenuitem-new-site">${rloader.sit_newsite}</a></span></li>
