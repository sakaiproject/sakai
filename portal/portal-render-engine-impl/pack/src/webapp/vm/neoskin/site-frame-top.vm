								document.forms[0].eid.focus();
							</script>
						</form>
					#end
					</div>
					<!-- end login component -->
				</div>
			</div>
			<div class="divColor" id="tabBottom">
				<br />
			</div>
		</div>
		#end
	</div>
</div>
