#macro( siteListItem $index $site $isExpanded $isCurrentSite)

    #if ($site.isPinned)
        #set ($pinTitle = $rloader.sitenav_btn_unpin)
        #set ($pinIconClass = "bi-pin-fill")
    #else
        #set ($pinTitle = $rloader.sitenav_btn_pin)
        #set ($pinIconClass = "bi-pin")
    #end

    #if ($isCurrentSite)
        #set ($currentSiteClass = "is-current-site")
        #set ($isExpanded = "true")
    #else
        #set ($currentSiteClass = "")
        #set ($isExpanded = "false")
    #end

    <li class="site-list-item py-1 $!{currentSiteClass}">
        <div class="site-list-item-head d-flex align-items-center pe-2">
            <button class="d-flex btn btn-nav btn-site rounded-end text-start border-0 me-1 #if (!$isCurrentSite)collapsed#end"
                    data-bs-toggle="collapse"
                    data-bs-target="#site-${index}-pages"
                    aria-expanded="${isExpanded}"
                    aria-controls="site-${index}-pages">
                <i class="bi bi-chevron-right" aria-hidden="true"></i>
                <span class="text-break">${site.title}</span>
            </button>
            #if ($loggedIn)
                <button class="d-inline-block p-1 site-opt-pin btn btn-site-opt bi $!{pinIconClass}"
                    data-pin-site="${site.id}"
                    data-pinned="$!{site.isPinned}"
                    title="${pinTitle}">
                </button>
                #if ($site.description)
                <button class="d-inline-block p-1 btn bi bi-info-circle btn-site-opt site-description-button"
                    data-bs-toggle="popover"
                    data-bs-html="true"
                    data-bs-content-id="description-${site.id}"
                    data-bs-trigger="focus"
                    aria-label="Click for the full site description"
                    aria-expanded="false">
                </button>
                <div id="description-${site.id}" class="d-none">${site.description}</div>
                #end
            #end
        </div>
        <div id="site-${index}-pages" class="site-list-item-collapse collapse #if ($isCurrentSite)show#end">
            <ul class="site-page-list nav flex-column py-1 mb-2">
            #foreach ( $page in $site.pages )
                #if ($isCurrentSite)
                    #set ($pageUrl = $page.resetUrl)
                #else
                    #set ($pageUrl = $page.url)
                #end
                #pageListItem ($page.id, $page.title, $pageUrl, "${page.icon}", 4, $page.hidden, $page.locked)
            #end
            #if ($site.subSites)
                <li class="nav-item" tabindex="1">
                    <div class="d-inline-flex align-items-stretch">
                        <button class="btn btn-nav btn-subsite rounded-end text-start collapsed border-0 ps-4" data-bs-toggle="collapse" data-bs-target="#site-${index}-subpages" aria-expanded="false" aria-controls="site-${index}-subpages">
                            <i class="btn-site-carret" aria-hidden="true"></i>
                            <span>${rloader.sitenav_sub_sites}</span>
                        </button>
                    </div>
                    <div id="site-${index}-subpages" class="collapse">
                        <ul class="nav flex-column">
                            #foreach ( $subSite in $site.subSites )
                                #pageListItem ("subsites", $subSite.title, $subSite.url, "si si-subsite", 5)
                            #end
                        </ul>
                    </div>
                </li>
            #end
            </ul>
        </div>
    </li>
#end

#macro( pageListItem $id $title $url $icon $indentation $hidden $locked)
    
    <li class="nav-item" tabindex="1">
        <a class="btn btn-nav rounded-end me-1 ps-${indentation} #if ($selectedPage == $id)selected-page#end" data-page-id="${id}" href="$!{url}">
            <div class="d-flex text-start align-items-center">
                <div class="d-flex me-auto rounded-end">
                    <i class="me-1 $!{icon}" aria-hidden="true"></i>
                    <span>${title}</span>
                </div>
                <div class="me-1">
                #if ($hidden)
                    <i class="si si-hidden"></i>
                #end
                #if ($locked)
                    <i class="si si-locked"></i>
                #end
                </div>
            </div>
        </a>
    </li>
#end

