<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
	    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	    <link href="${pageSkinRepo}/tool_base.css" type="text/css" rel="stylesheet" media="all" />
	    <link href="${pageSkinRepo}/${pageSkin}/tool.css" type="text/css" rel="stylesheet" media="all" />
	    <meta http-equiv="Content-Style-Type" content="text/css" />
	</head>
	<body class="portalBody Mrphs-portalBody">
		<div id="Mrphs-choice" class="Mrphs-portalWrapper">
			<fieldset>
				#if($onedriveConfigured)
					<h1 class="fa fa-windows" aria-hidden="true"> $rloader.getString("onedrive_configured")</h1>
				#else
					<h1 class="fa fa-windows" aria-hidden="true"> $rloader.getString("onedrive_error")</h1>
				#end
				<p class="buttons">
					<span>$rloader.getString("onedrive_button_msg")</span>
					<a href="${portalPath}" title="$rloader.getString("onedrive_back")">
						<input type="button" value="$rloader.getString("onedrive_back")" class="Mrphs-button Mrphs-button--active">
					</a>
				</p>
			</fieldset>
		</div>
	</body>
</html>
