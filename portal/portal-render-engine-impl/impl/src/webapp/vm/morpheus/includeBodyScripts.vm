                    ${d}PBJQ(function(){
                    PNotify.defaults.styling = 'bootstrap3';
                    PNotify.defaults.icons = 'fontawesome4';
                    PNotify.alert({
                        title: '${rloader.getString("pnotify_notice")}',
                        text: data.error[i],
                        type: 'notice'
                    });
                });
            }
        });
    }
    #if ($userWarning) 
