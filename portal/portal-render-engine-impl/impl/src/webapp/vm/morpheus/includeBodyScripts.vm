  } else {
    if (typeof jQuery.migrateWarnings == 'undefined') {
      document.write('\x3Cscript src="${pageWebjarsPath}jquery-migrate/1.4.1/jquery-migrate.min.js$!{portalCDNQuery}">'+'\x3C/script>')
      console.debug('Portal adding jQuery migrate');
