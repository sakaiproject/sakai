<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
	    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	    <link href="${pageSkinRepo}/tool_base.css" type="text/css" rel="stylesheet" media="all" />
	    <link href="${pageSkinRepo}/${pageSkin}/tool.css" type="text/css" rel="stylesheet" media="all" />
	    <meta http-equiv="Content-Style-Type" content="text/css" />
	    <title>${uiService}</title>
	    <script type="text/javascript" language="JavaScript" src="${pageScriptPath}headscripts.js"></script>
		<meta name="viewport" content="width=device-width"/>
	</head>
	<body>
		<!-- choice.vm -->
    <div id="login-choice" class="login">
        <h1 id="login-choice-header">${choiceRequired}</h1>
        <aside class="logo"></aside>
        <fieldset>
              <a href="${xloginUrl}">
                  #if("$xloginChoiceIcon" != "")
                      <img src="${pageSkinRepo}/${pageSkin}/images/spacer.gif" alt="${xloginChoiceText}"
                           style="background-image: url('${xloginChoiceIcon}');"/>
                  #end
                  <span>${xloginChoiceText}</span>
              </a>
              <a href="${containerLoginUrl}">
                  #if("$containerLoginChoiceIcon" != "")
                      <img src="${pageSkinRepo}/${pageSkin}/images/spacer.gif" alt="${containerLoginChoiceText}"
                           style="background-image: url('${containerLoginChoiceIcon}');">
                  #end
                  <span>${containerLoginChoiceText}</span>
              </a>
        </fieldset>
    </div>
		<!-- end choice.vm -->
	</body>
</html>
