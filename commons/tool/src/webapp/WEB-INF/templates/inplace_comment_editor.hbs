    <div class="commons-editor-text commons-comment-editor-text" data-post-id="{{id}}"><textarea id="commons-comment-textarea-{{id}}" class="commons-comment-textarea" data-post-id="{{id}}"></textarea></div>
    <div id="commons-comment-post-buttons-{{id}}" class="my-1">
        <button id="commons-inplace-comment-editor-post-button-{{id}}" class="btn btn-link">{{tr 'post_comment'}}</button>
        <button id="commons-inplace-comment-editor-cancel-button-{{id}}" class="btn btn-link">{{tr 'cancel'}}</button>
    </div>
</div>
