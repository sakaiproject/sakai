<script type="text/javascript">
function openWikiSearch() {
  var top = window.top;
  var portal = top.portal;
  if (!portal) return;
  // Set tool filter ('wiki' = content producer key) and site on the search component
  var search = top.document.querySelector('#sakai-search-panel sakai-search');
  if (search) {
    search.setAttribute('tool', 'wiki');
    search.setAttribute('site-id', portal.siteId);
  }
  // Set panel label using the portal tool registration ID ('sakai.rwiki') for the title lookup
  var label = top.document.getElementById('sakai-search-panel-label');
  if (label) {
    var toolTitle = portal.toolTitles && portal.toolTitles['sakai.rwiki'];
    label.innerHTML = toolTitle
      ? portal.search.searchTranslation + ' ' + toolTitle
      : portal.search.defaultTitle;
  }
  var panel = top.document.getElementById('sakai-search-panel');
  if (panel) {
    top.bootstrap.Offcanvas.getOrCreateInstance(panel).show();
  }
}
</script>
