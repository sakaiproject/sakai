    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/resources</directory>
            </resource>
            <resource>
                <directory>${basedir}/src/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
    </build>

    <profiles>
        <profile>
            <id>optional</id>
            <!-- NOTE: If you enable optional modules, please look at the <properties> section of the main
             pom file for the settings for yaft, mneme, and assignment2. For the tools you use, make sure
             to adjust the versions to match the version you are using. For the tools that are not in your
             system, change the scope to "compile". That will cause the API jar file to be included with
             lessons. Without that, the system won't start. For modules you use the API jar files will be
             in shared/lib, so you want the scope to be "provided".
            -->

            <repositories>
                <!--
                     To enable YAFT, MNEME, and Assignments 2, uncomment the repository, dependencies and plugin below.
                     Look for all comment blocks that start with OPTIONAL. Remove that whole line, and the matching close
                  -->
                <repository>
                    <id>rutgers</id>
                    <name>Backup API copies</name>
                    <layout>default</layout>
                    <url>https://sakai.rutgers.edu/stats/repos</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>

            <dependencies>
                <dependency>
                    <groupId>org.sakaiproject.scorm</groupId>
                    <artifactId>sakai-scorm-api</artifactId>
                    <version>3.1.9</version>
                    <scope>provided</scope>
                </dependency>
                <dependency>
                    <groupId>org.sakaiproject.scorm</groupId>
                    <artifactId>sakai-scorm-tool</artifactId>
                    <version>3.1.9</version>
                    <scope>compile</scope>
                </dependency>
                <dependency>
                    <groupId>org.sakaiproject.yaft</groupId>
                    <artifactId>yaft-api</artifactId>
                    <version>${sakai.yaft.version}</version>
                    <scope>${sakai.yaft.scope}</scope>
                </dependency>
                <dependency>
                    <groupId>org.etudes</groupId>
                    <artifactId>etudes-mneme-api</artifactId>
                    <version>${sakai.mneme.version}</version>
                    <scope>${sakai.mneme.scope}</scope>
                </dependency>
                <dependency>
                    <groupId>org.sakaiproject.assignment2</groupId>
                    <artifactId>sakai-assignment2-api</artifactId>
                    <version>${sakai.assignment2.version}</version>
                    <scope>${sakai.assignment2.scope}</scope>
                </dependency>
            </dependencies>

            <build>
                <!-- adds src areas for optional stuff -->
                <!-- the directories are set up in profiles below -->
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <id>add-source</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>add-source</goal>
                                </goals>
                                <configuration>
                                    <sources>
                                        <source>opt-src/java</source>
                                    </sources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>add-test-source</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>add-test-source</goal>
                                </goals>
                                <configuration>
                                    <sources>
                                        <source>opt-src/test</source>
                                    </sources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>add-resource</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>add-resource</goal>
                                </goals>
                                <configuration>
                                    <resources>
                                        <resource>
                                            <directory>opt-src/webapp/WEB-INF</directory>
                                            <targetPath>${sakai.build.directory}/lessonbuilder-tool-${project.version}/WEB-INF</targetPath>
                                        </resource>
                                        <resource>
                                            <directory>opt-src/webapp/WEB-INF</directory>
                                            <targetPath>${sakai.build.directory}/lessonbuilder-tool-${project.version}/WEB-INF</targetPath>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
