{
  "name": "trinity",
  "version": "1.0.0",
  "description": "Sakai Trinity Skin",
  "homepage": "https://sakailms.org",
  "main": "",
  "scripts": {
    "build": "npm-run-all css-lint css-compile css-prefix js-lint js-compile",
    "css-compile": "sass --style=expanded --load-path=node_modules src/sass:target",
    "css-watch": "sass --watch --style=expanded --load-path=node_modules src/sass:$npm_config_target",
    "css-lint": "stylelint src/sass/ --config config/.stylelintrc.json",
    "css-prefix": "postcss --config config/postcss.config.js --replace  target/*.css",
    "css-clean": "rimraf ../../target/library-23-SNAPSHOT/skin/trinity",
    "js-compile": "vite build --config config/vite.config.js",
    "js-lint": "eslint -c config/.eslintrc.js src/js",
    "watch": "nodemon -e html,scss -x \"npm run css-compile\"",
    "watch-clean": "nodemon -e scss -x \"npm-run-all css-clean css-reload \"",
    "watch-sass": "nodemon -e html,scss -x \"npm run css-compile src/$npm_config_source/sass:$npm_config_targetDir/library/skin/$npm_config_target\"",
    "test": "npm run css-lint && npm run css-compile"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.2",
    "bootstrap": "^5.1.2",
    "bootstrap-icons": "^1.4.0",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "@adrianfish/empathise": "^0.1.9",
    "autoprefixer": "^10.2.5",
    "eslint": "^8.0.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "sass": "^1.42.1",
    "serve": "^11.3.2",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-twbs-bootstrap": "^2.1.0",
    "vite": "^2.6.13"
  }
}
