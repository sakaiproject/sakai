	<name>Sakai Library</name>
	<groupId>org.sakaiproject.library</groupId>
	<artifactId>library</artifactId>
	<packaging>war</packaging>
	<properties>
		<!-- This is used in re-write rules as well -->
		<ckeditor.version>4.16.1</ckeditor.version>
		<bootstrap-version>3.3.7</bootstrap-version>
		<font-awesome-version>4.7.0</font-awesome-version>
		<node-version>v16.8.0</node-version>
		<npm-version>6.14.15</npm-version>
		<!-- Default extra plugins enabled -->
		<ckeditor-extra-plugins>sakaipreview,sakaidropdowntoolbar,sakaiopenlink,</ckeditor-extra-plugins>
		<!-- Empty defaults for a11y-->
		<ckeditor-a11y-extra-plugins></ckeditor-a11y-extra-plugins>
		<sakai.skin.source>trinity</sakai.skin.source>
		<sakai.skin.target>trinity</sakai.skin.target>
		<sakai.skin.customization.file>src/trinity/sass/examples/_empty.scss</sakai.skin.customization.file>
		<sakai.skin.customization.scss.lib>src/trinity/sass/examples/_empty.scss</sakai.skin.customization.scss.lib>
		<!-- Backwards compatability with -Dsakai.skin.customization.file -->
		<sakai.skin.customization.scss.main>${sakai.skin.customization.file}</sakai.skin.customization.scss.main>
		<sakai.skin.customization.js.lib>src/trinity/js/examples/_empty.js</sakai.skin.customization.js.lib>
		<sakai.skin.customization.js.main>src/trinity/js/examples/_empty.js</sakai.skin.customization.js.main>
	</properties>
