	<properties>
		<!-- This is used in re-write rules as well -->
		<ckeditor.version>4.22.1</ckeditor.version>
		<bootstrap-version>5.2.0</bootstrap-version>
		<!-- Default extra plugins enabled -->
		<ckeditor-extra-plugins>sakaipreview,sakaidropdowntoolbar,sakaiopenlink,</ckeditor-extra-plugins>
		<!-- Default math extra plugins enabled -->
		<ckeditor-math-extra-plugins></ckeditor-math-extra-plugins>
		<!-- Empty defaults for a11y-->
		<ckeditor-a11y-extra-plugins></ckeditor-a11y-extra-plugins>
		<sakai.skin.source>default</sakai.skin.source>
		<sakai.skin.target>default-skin</sakai.skin.target>
		<sakai.skin.customization.file>src/skins/${sakai.skin.source}/src/sass/examples/_empty.scss</sakai.skin.customization.file>
		<sakai.skin.customization.scss.lib>src/skins/${sakai.skin.source}/src/sass/examples/_empty.scss</sakai.skin.customization.scss.lib>
		<!-- Overwrite with with -Dsakai.skin.customization.file -->
		<sakai.skin.customization.scss.main>${sakai.skin.customization.file}</sakai.skin.customization.scss.main>
	</properties>
