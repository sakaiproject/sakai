<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
	<extend>../project.xml</extend>
    <id>sakai-gradebook-service-pack</id>
    <name>sakai-gradebook-service-pack</name>
    <shortDescription>Sakai Gradebook Component Package</shortDescription>

	<properties>
		<deploy.type>components</deploy.type>
	</properties>

    <dependencies>
    	<dependency>
        	<groupId>sakaiproject</groupId>
	        <artifactId>sakai-gradebook-service-impl</artifactId>
			<version>${sakai.version}</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
    	</dependency>
    </dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/resources</directory>
			</resource>
		</resources>
	</build>
</project>
