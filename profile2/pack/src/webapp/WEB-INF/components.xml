    <!-- CacheManager -->
    <bean id="org.sakaiproject.profile2.cache.CacheManager"
    	class="org.sakaiproject.profile2.cache.CacheManagerImpl">
    	<property name="memoryService" ref="org.sakaiproject.memory.api.MemoryService" />
    </bean>

