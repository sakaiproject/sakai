<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.sakaiproject.profile2.model">

	<class name="SocialNetworkingInfo" table="PROFILE_SOCIAL_INFO_T">

		<!-- one per user -->
		<id name="userUuid" column="USER_UUID" length="99">
			<generator class="assigned" />
		</id>
		
		<property name="facebookUrl" column="FACEBOOK_URL" not-null="false" />
		<property name="linkedinUrl" column="LINKEDIN_URL" not-null="false" />
		<property name="myspaceUrl" column="MYSPACE_URL" not-null="false" />
		<property name="skypeUsername" column="SKYPE_USERNAME" not-null="false" />
		<property name="twitterUrl" column="TWITTER_URL" not-null="false" />
		
	</class>
	
	<query name="getSocialNetworkingInfo">
    	<![CDATA[from SocialNetworkingInfo socialNetworkingInfo WHERE socialNetworkingInfo.userUuid = :userUuid]]>
	</query>
</hibernate-mapping>
