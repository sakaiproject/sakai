  <name>Sakai Web Project</name>
  <groupId>org.sakaiproject</groupId>
  <artifactId>web-base</artifactId>
  <version>11-SNAPSHOT</version>
  <packaging>pom</packaging>

  <scm>
    <connection>scm:svn:https://source.sakaiproject.org/svn/web/trunk</connection>
    <developerConnection>scm:svn:https://source.sakaiproject.org/svn/web/trunk</developerConnection>
    <url>https://source.sakaiproject.org/svn/web/trunk</url>
  </scm>

  <profiles>
    <profile>
      <id>framework</id>
      <modules>
        <module>web-api/api</module>
        <module>web-impl/impl</module>
