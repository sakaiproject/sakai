        <module>news-tool/tool</module>
        <module>web-api/api</module>
        <module>web-impl/impl</module>
        <module>web-impl/pack</module>
        <module>web-tool/tool</module>
        <module>web-portlet</module> 
      </modules>
    </profile>
  </profiles>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.sakaiproject</groupId>
        <artifactId>sakai-news-impl</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.sakaiproject</groupId>
        <artifactId>sakai-web-impl</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
