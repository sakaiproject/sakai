        <module>web-tool/tool</module>
        <module>web-portlet</module> 
      </modules>
    </profile>
    <profile>
      <id>full</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>news-api/api</module>
        <module>news-impl/impl</module>
