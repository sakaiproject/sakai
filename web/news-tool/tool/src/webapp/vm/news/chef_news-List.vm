	<!--[if gte IE 6]>
		<script type="text/javascript" language="JavaScript">
			document.body.style.width='97%'
		</script>
	<![endif]--> 


	<div class="portletBody">
		#if($alertMessage)
			<div class="alertMessage">
				$validator.escapeHtml($alertMessage)
			</div>
		#end
		#foreach ($item in $news_items)
				#if($item.Title)
					<h4 class="textPanelHeader">
					#set($title="$validator.escapeHtml($item.Title)")
						$validator.escapeHtml($item.Title)
					</h4>
				#end
				#if($item.Description)
					<div class="textPanel">
						$item.Description
					</div>	
					<p class="textPanelFooter">
						#if($item.Link)
							 <a href="$validator.escapeHtml($item.Link)" target="_blank" title="$tlang.getString("goto.item")">($full_story)</a>
						 #end
						 #if($item.Pubdate)
							($item.Pubdate)
						#end
					</p>

				#end	
		#end
	</div>

