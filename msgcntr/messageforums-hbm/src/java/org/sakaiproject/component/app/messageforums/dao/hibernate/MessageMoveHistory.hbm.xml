  <query name="findHistoryForMessage">
    <![CDATA[from org.sakaiproject.component.app.messageforums.dao.hibernate.MessageMoveHistoryImpl as us where us.messageId = :messageId ]]>
  </query>
  -->
</hibernate-mapping>

