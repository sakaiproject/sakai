<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="mcAbout" class="org.sakaiproject.component.app.help.model.ResourceBean">
        <property name="docId"> <value>avaq</value> </property>
        <property name="name"> <value>Messages</value> </property>
        <property name="location"> <value>/sakai_messages/avaq.html</value> </property>
		<property name="defaultForTool"> <value>sakai.messages</value> </property>
    </bean>
    <bean id="mcModifying" class="org.sakaiproject.component.app.help.model.ResourceBean">
        <property name="docId"> <value>bcpl</value> </property>
        <property name="name"> <value>Modifying settings</value> </property>
        <property name="location"> <value>/sakai_messages/bcpl.html</value> </property>
		<property name="defaultForTool"> <value>sakai.messages</value> </property>
    </bean>
    <bean id="mcOverview" class="org.sakaiproject.component.app.help.model.ResourceBean">
        <property name="docId"> <value>avao</value> </property>
        <property name="name"> <value>Messages Overview</value> </property>
        <property name="location"> <value>/sakai_messages/avao.html</value> </property>
    </bean>
    <bean id="mcSendPm" class="org.sakaiproject.component.app.help.model.ResourceBean">
        <property name="docId">
            <value>augw</value>
        </property>
        <property name="name">
            <value>Send and reply to messages</value>
        </property>
        <property name="location">
            <value>/sakai_messages/augw.html</value>
        </property>
    </bean>
    <bean id="mcViewPm" class="org.sakaiproject.component.app.help.model.ResourceBean">
        <property name="docId">
            <value>augv</value>
        </property>
        <property name="name">
            <value>View and manage messages</value>
        </property>
        <property name="location">
            <value>/sakai_messages/augv.html</value>
        </property>
    </bean>
    <bean id="mcSearchPm" class="org.sakaiproject.component.app.help.model.ResourceBean">
        <property name="docId">
            <value>atrg</value>
        </property>
        <property name="name">
            <value>Search messages</value>
        </property>
        <property name="location">
            <value>/sakai_messages/atrg.html</value>
        </property>
    </bean>
    
    <bean id="org.sakaiproject.api.app.help.TableOfContents" class="org.sakaiproject.component.app.help.model.TableOfContentsBean">
        <property name="name">
            <value>root</value>
        </property>
        <property name="categories">
            <list>
                <bean id="messagesCategory" class="org.sakaiproject.component.app.help.model.CategoryBean">
                    <property name="name">
                        <value>Messages</value>
                    </property>
                    <property name="resources">
                        <list>
                            <ref bean="mcAbout"/>
                            <ref bean="mcOverview"/>
                            <ref bean="mcModifying"/>
                            <ref bean="mcSendPm" />
                            <ref bean="mcViewPm" />
                            <ref bean="mcSearchPm" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
